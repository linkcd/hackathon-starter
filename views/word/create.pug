extends ../layout

block content
  .page-header
    h3 Create new word

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='orignaltext') Original
      .col-sm-8
        input.form-control(type='text', name='orignaltext', id='orignaltext', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='translation') Translation
      .col-sm-8
        input.form-control(type='text', name='translation', id='translation')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Create
